<h1> Manage Your Stylists</h1>

<% if @stylists.any?() %>
  <ul>
    <% @stylists.each do |stylist| %>
      <li>
        <%= stylist.name %>, <%= stylist.station %>
        <form action="/stylists/edit" method="get">
          <input id="stylist_id" name="stylist_id" type="hidden" value="<%=stylist.id() %>">
          <button type="submit" name="assign_doctor" class="btn-sm">Edit or Delete</button>
        </form>
      </li>
    <% end %>
  </ul>
<% else %>
  <h2> You don't have any stylists yet!</h2>
<% end %>

<button type='button'><a href='/stylists/new'>Add a New Stylist</a></button>

<button type='button'><a href='/'>Back Home</a></button>
